{
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "name": "Test extension",
  "description": "Just a text extension",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png"
    }
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
